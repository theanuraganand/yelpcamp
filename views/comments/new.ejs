<%  include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center" style="margin: 20px">Create a New Comment on <%=campground.name%></h1>
        </div>
        <div class="col-lg-12">
            <div class="" style="width: 30%; margin: 20px auto;">
                <form action="/campgrounds/<%=campground._id%>/comments" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="text" name="comment[text]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-large btn-primary">Add </button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>
<%  include ../partials/footer %>